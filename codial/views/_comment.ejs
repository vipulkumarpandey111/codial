<li style="list-style:disc ">
    <p>
        <% if(locals.user && locals.user.id==comment.user.id){ %>
            <small>
               <a href = "/comments/destroy/<%= comment.id %>"><button style="background-color: rgb(236, 119, 111); margin:5px; border-radius: 5px;">Delete</button></a>
            </small>
         <% } %> 
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
         <!--display the likes of this comment,if the user id logged in,then show the link to toggle likes,else just show the count-->
    
    <button style="background-color: rgb(219, 223, 210); margin:5px;  border-radius: 5px;">
    <small>
        <% if(locals.user){ %>
            <a style="color:rgb(255, 0, 43); text-decoration: none;" class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                <%= comment.likes.length %> Likes
            </a>
        <%}else{%>
                <%= comment.likes.length %> Likes
        <%}%>
    </small>
    </button>
    </p>
    </li>